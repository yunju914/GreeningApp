<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        >

        <ImageView
            android:id="@+id/searchpimg"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_centerVertical="true"
            android:src="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/searchpname"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/searchpimg"
            android:text="This is P_Name"
            android:textColor="#000"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/searchpsay"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_below="@id/searchpname"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/searchpimg"
            android:text="This is P_say"
            android:textColor="#000"
            android:textSize="12sp" />


        <TextView
            android:id="@+id/searchpprice"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_below="@id/searchpsay"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/searchpimg"
            android:text="This is P_price"
            android:textColor="#000"
            android:textSize="16sp"
            android:textStyle="bold" />

    </RelativeLayout>
</androidx.cardview.widget.CardView>