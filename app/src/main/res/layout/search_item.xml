<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="0dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingRight="12dp"
        android:paddingLeft="12dp"
        android:paddingTop="4dp"
        android:paddingBottom="8dp"
        >

        <ImageView
            android:id="@+id/searchpimg"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_centerVertical="true"
            android:src="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/searchpname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="8dp"
            android:layout_toRightOf="@id/searchpimg"
            android:text="This is P_Name"
            android:textColor="#000"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/searchpsay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/searchpname"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="4dp"
            android:layout_toRightOf="@id/searchpimg"
            android:text="This is P_say"
            android:textColor="@color/textColorGray"
            android:textSize="12sp" />


        <TextView
            android:id="@+id/searchpprice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/searchpsay"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="12dp"
            android:layout_toRightOf="@id/searchpimg"
            android:text="This is P_price"
            android:textColor="#000"
            android:textSize="14sp"
            android:textStyle="bold" />

    </RelativeLayout>
</androidx.cardview.widget.CardView>