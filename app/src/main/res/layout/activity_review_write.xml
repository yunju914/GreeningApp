<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!--            <TextView-->
            <!--                android:id="@+id/reviewTool"-->
            <!--                android:layout_width="match_parent"-->
            <!--                android:layout_height="50dp"-->
            <!--                android:layout_gravity="center"-->
            <!--                android:gravity="center"-->
            <!--                android:textSize="20dp"-->
            <!--                android:text="후기작성"/>-->
            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar_write"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="1dp"
                android:minHeight="?attr/actionBarSize"
                android:theme="?attr/actionBarTheme"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageButton
                    android:id="@+id/writeCancelBtn"
                    android:background="@drawable/baseline_arrow_back_24"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_margin="9dp"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:scaleType="centerInside"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textSize="24sp"
                    android:text="리뷰 작성">
                </TextView>
            </androidx.appcompat.widget.Toolbar>


            <ImageView
                android:id="@+id/writePImg"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_gravity="center"
                android:layout_margin="8dp"
                />

            <TextView
                android:id="@+id/writePname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="20sp"
                android:text="상품명"/>

            <TextView
                android:id="@+id/reviewDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="16sp"
                android:text=""/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="16sp"
                android:text="상품은 어떠셨나요?"/>

            <RatingBar
                android:id="@+id/writeRatingBar"
                style="?android:attr/ratingBarStyleIndicator"
                android:progressTint="@android:color/holo_orange_light"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:isIndicator="false"
                android:max="5"
                android:numStars="5"
                android:rating="5"
                android:stepSize="0.5" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:textSize="16sp"
                android:text="리뷰 작성하기"/>

            <EditText
                android:id="@+id/writeReviewEt"
                android:layout_width="match_parent"
                android:layout_height="170dp"
                android:gravity="top"
                android:hint="후기를 작성해주세요"
                android:inputType="textMultiLine"
                android:lines="8"
                android:maxLines="10"
                android:minLines="5"
                android:textSize="16sp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:scrollbars="vertical" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="사진 첨부"
                android:layout_marginLeft="16dp"
                android:textSize="20sp"/>


            <ImageView
                android:id="@+id/writeUploadImage"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_gravity="left"
                android:layout_margin="16dp"
                android:src="@drawable/baseline_add_24"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal">

                <!--                <Button-->
                <!--                    android:id="@+id/writeCancelBtn"-->
                <!--                    android:layout_width="wrap_content"-->
                <!--                    android:layout_height="wrap_content"-->
                <!--                    android:layout_weight="5"-->
                <!--                    android:textSize="16sp"-->
                <!--                    android:gravity="center"-->
                <!--                    android:text="취소">-->

                <!--                </Button>-->

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/writeUploadBtn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="5"
                    android:background="@drawable/custom_btn"
                    android:textSize="20sp"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:layout_margin="8dp"
                    android:onClick="onClick"
                    android:text="확인"/>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>



</LinearLayout>