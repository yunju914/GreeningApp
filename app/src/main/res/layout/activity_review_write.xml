<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ReviewWriteActivity">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/reviewTool"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="20sp"
                android:text="후기작성"/>

            <ImageView
                android:id="@+id/writePImg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:src="@drawable/ic_launcher_background" />

            <TextView
                android:id="@+id/writePname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="18sp"
                android:text="상품명"/>

            <TextView
                android:id="@+id/reviewDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="18sp"
                android:text=""/>

            <RatingBar
                android:id="@+id/writeRatingBar"
                style="?android:attr/ratingBarStyleIndicator"
                android:progressTint="@android:color/holo_orange_light"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:isIndicator="false"
                android:max="5"
                android:numStars="5"
                android:rating="5"
                android:stepSize="0.5" />

            <EditText
                android:id="@+id/writeReviewEt"
                android:layout_width="match_parent"
                android:layout_height="172dp"
                android:gravity="top"
                android:hint="후기를 작성해주세요"
                android:inputType="textMultiLine"
                android:lines="8"
                android:maxLines="10"
                android:minLines="5"
                android:scrollbars="vertical" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="사진 첨부"
                android:textSize="20dp"/>


            <ImageView
                android:id="@+id/writeUploadImage"
                android:layout_width="130dp"
                android:layout_height="120dp"
                android:layout_gravity="left"
                android:layout_margin="4dp"
                android:clickable="true"
                android:src="@drawable/ic_launcher_background" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/writeCancelBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="5"
                    android:gravity="center"
                    android:text="취소">

                </Button>

                <Button
                    android:id="@+id/writeUploadBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="5"
                    android:gravity="center"
                    android:onClick="btn_Click"
                    android:text="확인"></Button>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>